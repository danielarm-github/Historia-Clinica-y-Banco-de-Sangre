  + setFechaNacimiento(fechaNacimiento: Date)
  + getSexo(): String
  + setSexo(sexo: String)
  + getPeso(): Double
  + setPeso(peso: Double)
  + getEstatura(): Double
  + setEstatura(estatura: Double)
